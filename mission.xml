<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <About>
        <Summary>Fight Zombie</Summary>
    </About>

    <ModSettings>
        <MsPerTick>35</MsPerTick>
    </ModSettings>

    <ServerSection>
        <ServerInitialConditions>
            <Time>
                <StartTime>10000</StartTime>
                <AllowPassageOfTime>false</AllowPassageOfTime>
            </Time>
        </ServerInitialConditions>
        <ServerHandlers>
            <FlatWorldGenerator generatorString="3;7,2*3,2;1;village"/>
            <DrawingDecorator>
                <DrawCuboid x1="-10" y1="4" z1="-10" x2="10" y2="24" z2="-10" type="barrier"/>
                <DrawCuboid x1="-10" y1="4" z1="10" x2="10" y2="24" z2="10" type="barrier"/>
                <DrawCuboid x1="-10" y1="4" z1="-10" x2="-10" y2="24" z2="10" type="barrier"/>
                <DrawCuboid x1="10" y1="4" z1="-10" x2="10" y2="24" z2="10" type="barrier"/>
                <DrawCuboid x1="-10" y1="25" z1="-10" x2="10" y2="25" z2="10" type="quartz_block"/>
                <DrawCuboid x1="-10" y1="3" z1="-10" x2="10" y2="3" z2="10" type="sea_lantern"/>
            </DrawingDecorator>
            <ServerQuitWhenAnyAgentFinishes/>
        </ServerHandlers>
    </ServerSection>
  
    <AgentSection mode="Adventure">
        <Name>Cashel</Name>
        <AgentStart>
            <Placement x="-5" y="4" z="0" yaw="270"/>
            <Inventory>
                <InventoryItem slot="0" type="diamond_sword" quantity="1"/>
            </Inventory>
        </AgentStart>
        <AgentHandlers>
            <VideoProducer>
                <Width>800</Width>
                <Height>600</Height>
            </VideoProducer>
            <ObservationFromFullStats/>
            <ObservationFromNearbyEntities>
                <Range name="entities" xrange="20" yrange="10" zrange="20"/>
            </ObservationFromNearbyEntities>
            <ContinuousMovementCommands/>
            <RewardForMissionEnd> 
                <Reward description="quit" reward="-100" />
            </RewardForMissionEnd>
            <MissionQuitCommands quitDescription="quit"/>
        </AgentHandlers>
    </AgentSection>

    <AgentSection mode="Adventure">
        <Name>Troy</Name>
        <AgentStart>
            <Placement x="5" y="4" z="0" yaw="90"/>
            <Inventory>
                <InventoryItem slot="0" type="diamond_sword" quantity="1"/>
            </Inventory>
        </AgentStart>
        <AgentHandlers>
            <VideoProducer>
                <Width>800</Width>
                <Height>600</Height>
            </VideoProducer>
            <ObservationFromFullStats/>
            <ObservationFromNearbyEntities>
                <Range name="entities" xrange="20" yrange="10" zrange="20"/>
            </ObservationFromNearbyEntities>
            <ContinuousMovementCommands/>
            <RewardForMissionEnd> 
                <Reward description="quit" reward="-100" />
            </RewardForMissionEnd>
            <MissionQuitCommands quitDescription="quit"/>
        </AgentHandlers>
    </AgentSection>

</Mission>
