<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <About>
        <Summary>Fight Zombie</Summary>
    </About>
  
    <ServerSection>
        <ServerInitialConditions>
            <Time>
                <StartTime>13000</StartTime> <!-- Set time to night to prevent zombie from burning -->
                <AllowPassageOfTime>false</AllowPassageOfTime>
            </Time>
        </ServerInitialConditions>
        <ServerHandlers>
            <FlatWorldGenerator generatorString="3;7,2*3,2;1;village"/>
            <DrawingDecorator>
                <DrawEntity x="0" y="4" z="2" type="Zombie"/>
            </DrawingDecorator>
            <ServerQuitWhenAnyAgentFinishes/>
        </ServerHandlers>
    </ServerSection>
  
    <AgentSection mode="Survival">
        <Name>WarriorBot</Name>
        <AgentStart>
            <Placement x="0.5" y="4" z="0.5" yaw="90"/>
            <Inventory>
                <InventoryItem slot="0" type="diamond_sword" quantity="1"/>
            </Inventory>
        </AgentStart>
        <AgentHandlers>
            <ObservationFromFullStats/>
            <DiscreteMovementCommands/>
            <ContinuousMovementCommands/>
            <RewardForDamagingEntity>
                <Mob type="Zombie" reward="5"/>
            </RewardForDamagingEntity>
            <RewardForCollectingItem>
                <Item type="rotten_flesh" reward="100"/>
            </RewardForCollectingItem>
            <RewardForMissionEnd>
                <Reward description="killed zombie" reward="1000" />
            </RewardForMissionEnd>
        </AgentHandlers>
    </AgentSection>

</Mission>
